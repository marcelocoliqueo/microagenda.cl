# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (REQUIRED for auto-update functionality)
# This key bypasses RLS and allows server-side operations
# Get it from: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App Configuration
NEXT_PUBLIC_SITE_URL=https://microagenda.cl
NEXT_PUBLIC_APP_URL=https://microagenda.cl
NEXT_PUBLIC_APP_NAME=MicroAgenda

# MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_WEBHOOK_URL=your_webhook_url

# Resend (Email Service)
RESEND_API_KEY=your_resend_api_key

# Cron Job Security
CRON_SECRET=your_random_secret_for_cron_jobs
